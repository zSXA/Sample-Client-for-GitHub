<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="5dp"
    android:paddingTop="10dp"
    android:paddingRight="3dp"
    android:paddingLeft="3dp"
    android:background="#fff">


    <TextView
        android:id="@+id/commit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingLeft="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:lines="2"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_below="@+id/top_single_commit_layout"
        android:paddingRight="5dp"
        android:text="This is my commit message, it can be fitted on two lines, do you see what I mean ?" />


    <LinearLayout
        android:id="@+id/top_single_commit_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/commit_id"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#888"
            android:textStyle="italic"
            android:paddingLeft="5dp"
            android:gravity="left"
            android:text="d452eac6b8" />

        <TextView
            android:id="@+id/commit_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:layout_weight="0.3"
            android:textColor="#888"
            android:textStyle="italic"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="Jul 2, 2015 5:08:41 PM" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/commit_message"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/commit_repoid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:layout_weight="0.55"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="7dp"
            android:text="organisation/repository" />

        <TextView
            android:id="@+id/commit_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:lines="1"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="#888"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:paddingLeft="7dp"
            android:paddingRight="3dp"
            android:text="pushed by IAmTheAuthor" />
    </LinearLayout>

</RelativeLayout>